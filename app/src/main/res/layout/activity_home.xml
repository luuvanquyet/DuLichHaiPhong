<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activity.HomeActivity">

   <de.hdodenhof.circleimageview.CircleImageView
       android:id="@+id/profileImage"
       android:layout_width="120dp"
       android:layout_height="120dp"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="50dp"
       android:src="@drawable/ic_person"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.ActionButton.CloseMode"
        android:text="Edit Photo"
        android:layout_below="@+id/profileImage"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnphoto"/>
    <LinearLayout
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnphoto"
        android:id="@+id/layot_text"
        android:weightSum="2"
        android:orientation="horizontal">
        <ImageView
            android:src="@drawable/ic_person"
            android:layout_weight="1"
            android:layout_width="70dp"
            android:layout_height="50dp"/>
        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên người dùng"
            android:inputType="textPersonName"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layot_text"
        android:id="@+id/layot_textaccount"
        android:weightSum="2"
        android:orientation="horizontal">
        <ImageView
            android:src="@drawable/ic_account"
            android:layout_weight="1"
            android:layout_width="70dp"
            android:layout_height="50dp"/>
        <EditText
            android:id="@+id/account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên tài khoản"
            android:inputType="textPersonName"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layot_textaccount"
        android:weightSum="2"
        android:orientation="horizontal"
        android:id="@+id/layoutemail">
        <ImageView
            android:src="@drawable/ic_email"
            android:layout_weight="1"
            android:layout_width="70dp"
            android:layout_height="50dp"/>
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textPersonName"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutemail"
        android:weightSum="2"
        android:orientation="horizontal"
        android:id="@+id/layoutsdt">
        <ImageView
            android:src="@drawable/ic_phone"
            android:layout_weight="1"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <EditText
            android:id="@+id/sodienthoai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số điện thoại"
            android:inputType="textPersonName"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            />
    </LinearLayout>
    <Button
        android:background="@drawable/radiusshape5dp"
        android:backgroundTint="#536DFE"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:id="@+id/btnDoimatkhau"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đổi mật khẩu"/>
    <Button
        android:background="@drawable/radiusshape5dp"
        android:backgroundTint="#F73D1C"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:id="@+id/btnLogout"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng xuất"/>
</RelativeLayout>