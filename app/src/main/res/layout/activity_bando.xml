<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.BandoActivity">

    <fragment
        android:id="@+id/mymap"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    </fragment>

    <Button
        android:background="@drawable/radiusshape5dp"
        android:backgroundTint="#2173FD"
        android:visibility="gone"
        android:id="@+id/btnXemchitiet"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="Xem chi tiết"
        android:textSize="14sp"
        android:textColor="#fff"
        app:layout_constraintBottom_toTopOf="@+id/btnChiduong"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="5dp"/>

    <Button
        android:background="@drawable/radiusshape5dp"
        android:backgroundTint="#F73D1C"
        android:textColor="#fff"
        android:visibility="gone"
        android:textSize="14sp"
        android:id="@+id/btnChiduong"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="Chỉ đường"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>